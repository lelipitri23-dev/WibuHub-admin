<%- include('../admin/partials/header', { /* data header */ }) %>
<a href="/admin" class="admin-back-btn">« Kembali ke Dasbor</a>
<h1>Admin - Daftar Anime</h1>

<style>
  .admin-back-btn {
    display: inline-block;
    margin-bottom: 20px;
    padding: 6px 12px;
    background-color: #555;
    color: #fff !important;
    border-radius: 4px;
    font-size: 0.9em;
    font-weight: bold;
    text-decoration: none;
  }
  .admin-back-btn:hover {
    background-color: #666;
    text-decoration: none;
  }

  /* --- Grid System Styles --- */
  .anime-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .anime-card {
    background-color: #333; /* Latar belakang kartu */
    border: 1px solid #555;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s;
  }

  .anime-card:hover {
    transform: translateY(-5px);
    border-color: #5bc0de;
  }

  .anime-card-img-wrapper {
    width: 100%;
    height: 280px; /* Tinggi gambar fixed agar rapi */
    overflow: hidden;
    position: relative;
    background-color: #222;
  }

  .anime-card img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Agar gambar mengisi area tanpa gepeng */
    display: block;
  }

  .anime-card-body {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .anime-title {
    font-size: 1.1em;
    font-weight: bold;
    margin: 0 0 10px 0;
    line-height: 1.4;
    color: #fff;
  }

  .anime-meta {
    font-size: 0.85em;
    color: #ccc;
    margin-bottom: 5px;
  }

  .anime-status {
    display: inline-block;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.8em;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .status-ongoing { background-color: #5bc0de; color: #fff; }
  .status-completed { background-color: #5cb85c; color: #fff; }
  .status-na { background-color: #777; color: #fff; }

  .anime-card-actions {
    padding: 10px 15px;
    background-color: #2c2c2c;
    border-top: 1px solid #444;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .btn-edit {
    color: #5bc0de;
    text-decoration: none;
    font-weight: bold;
    font-size: 0.9em;
  }
  .btn-edit:hover { text-decoration: underline; color: #31b0d5; }

  /* --- Search Form Styles (Keep existing) --- */
  .admin-search-form {
    margin-bottom: 20px;
    display: flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
  }
  .admin-search-form input[type="text"] {
    flex-grow: 1;
    max-width: 400px;
    padding: 8px;
    background-color: #444;
    border: 1px solid #666;
    color: #eee;
    border-radius: 4px;
    font-size: 0.9em;
  }
  .admin-search-form button {
    padding: 8px 15px;
    background-color: #5bc0de;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9em;
  }
  .admin-search-form a {
    color: #aaa;
    font-size: 0.9em;
    text-decoration: none;
  }
  .admin-search-form a:hover {
    text-decoration: underline;
  }
  
  .btn-danger {
    background-color: #d9534f !important;
    color: white;
    border: none;
    padding: 4px 10px !important;
    font-size: 0.9em;
    border-radius: 4px;
    cursor: pointer;
  }
  .btn-danger:hover {
    background-color: #c9302c !important;
  }

  /* Pagination styles adjustments if needed */
  .pagination {
      margin-top: 20px;
  }
</style>

<form class="admin-search-form" action="/admin/anime" method="GET">
  <input type="text" name="search" placeholder="Cari berdasarkan Judul atau Slug..." value="<%= (typeof searchQuery !== 'undefined' && searchQuery) ? searchQuery : '' %>">
  <button type="submit">Cari</button>
  <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
    <a href="/admin/anime">Clear</a>
  <% } %>
</form>

<div class="anime-container">
    <% if (animes.length === 0) { %>
      <div style="text-align: center; padding: 40px; background: #333; border-radius: 8px; color: #ccc;">
        <p>Tidak ada anime yang cocok ditemukan.</p>
      </div>
    <% } else { %>
      
      <div class="anime-grid">
        <% animes.forEach(anime => { %>
          <div class="anime-card">
            <div class="anime-card-img-wrapper">
                <img src="<%= anime.imageUrl || '/images/default.jpg' %>" alt="<%= anime.title %>" loading="lazy">
            </div>

            <div class="anime-card-body">
                <% 
                   let statusClass = 'status-na';
                   let statusText = anime.info?.Status || 'N/A';
                   if(statusText.toLowerCase().includes('ongoing')) statusClass = 'status-ongoing';
                   if(statusText.toLowerCase().includes('completed')) statusClass = 'status-completed';
                %>
                <div>
                    <span class="anime-status <%= statusClass %>"><%= statusText %></span>
                </div>

                <h3 class="anime-title"><%= anime.title %></h3>
                
                <div class="anime-meta">
                    <strong>Slug:</strong> <%= anime.pageSlug %>
                </div>
                <div class="anime-meta">
                    <strong>Update:</strong> <%= new Date(anime.updatedAt).toLocaleDateString('id-ID') %>
                </div>
            </div>

            <div class="anime-card-actions">
                <a href="/admin/anime/<%= encodeURIComponent(anime.pageSlug) %>/edit" class="btn-edit">Edit</a>
                
                <form action="/admin/anime/<%= encodeURIComponent(anime.pageSlug) %>/delete" method="POST" style="margin: 0;" onsubmit="return confirm('Yakin ingin menghapus anime ini? Ini akan menghapus SEMUA episodenya juga!');">
                    <button type="submit" class="btn-danger">Delete</button>
                </form>
            </div>
          </div>
        <% }) %>
      </div>

    <% } %>
</div>

<% if (totalPages > 1) { %>
  <div class="pagination">
    <% const pageSeparator = baseUrl.includes('?') ? '&' : '?'; %>

    <% if (currentPage > 1) { %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= currentPage - 1 %>">« Prev</a> <% } else { %> <span class="disabled">« Prev</span> <% } %>
    
    <% const maxP = 5;
       let sP = Math.max(1, currentPage - Math.floor(maxP / 2)); let eP = Math.min(totalPages, sP + maxP - 1); if(eP-sP+1<maxP) sP=Math.max(1,eP-maxP+1);
    %>
    <% if (sP > 1) { %> <a href="<%= baseUrl %><%= pageSeparator %>page=1">1</a> <% if (sP > 2) { %> <span class="disabled">...</span> <% } %> <% } %>
    <% for (let i = sP; i <= eP; i++) { %> <% if (i === currentPage) { %> <span class="current"><%= i %></span> <% } else { %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= i %>"><%= i %></a> <% } %> <% } %>
    <% if (eP < totalPages) { %> <% if (eP < totalPages - 1) { %> <span class="disabled">...</span> 
    <% } %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= totalPages %>"><%= totalPages %></a> <% } %>
    
    <% if (currentPage < totalPages) { %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= currentPage + 1 %>">Next »</a> <% } else { %> <span class="disabled">Next »</span> <% } %>
  </div>
<% } %>

<%- include('../admin/partials/footer', { page: page }) %>
