<%- include('../admin/partials/header', { /* data header */ }) %>
<a href="/admin" class="admin-back-btn">« Kembali ke Dasbor</a>
<h1>Admin - Daftar Anime</h1>

<style>
  .admin-back-btn {
    display: inline-block;
    margin-bottom: 20px;
    padding: 6px 12px;
    background-color: #555;
    color: #fff !important;
    border-radius: 4px;
    font-size: 0.9em;
    font-weight: bold;
    text-decoration: none;
  }
  .admin-back-btn:hover {
    background-color: #666;
    text-decoration: none;
  }

  /* --- GRID LIST STYLES --- */
  .anime-grid-list {
    display: grid;
    /* Membuat kolom responsif. Min 350px agar info tidak terlalu sempit */
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 15px;
    margin-bottom: 30px;
  }

  .list-card {
    display: flex; /* Layout Horizontal (Gambar Kiri - Teks Kanan) */
    background-color: #333;
    border: 1px solid #444;
    border-radius: 6px;
    overflow: hidden;
    height: 120px; /* Tinggi kartu fixed agar rapi */
    transition: all 0.2s ease;
  }

  .list-card:hover {
    border-color: #5bc0de;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }

  /* Bagian Gambar (Thumbnail Kecil) */
  .list-thumb {
    width: 90px; /* Lebar gambar fixed */
    height: 100%;
    flex-shrink: 0;
    position: relative;
    background-color: #222;
  }

  .list-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Bagian Informasi */
  .list-info {
    flex-grow: 1;
    padding: 10px 12px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0; /* Mencegah flex item overflow */
  }

  .list-title {
    margin: 0 0 4px 0;
    font-size: 1em;
    font-weight: bold;
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; /* Judul panjang jadi titik-titik */
  }

  .list-meta {
    font-size: 0.8em;
    color: #aaa;
    margin-bottom: 2px;
  }

  .list-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto; /* Dorong ke bawah */
    padding-top: 8px;
    border-top: 1px solid #444;
  }

  /* Badge Status Kecil */
  .status-badge {
    font-size: 0.75em;
    padding: 2px 6px;
    border-radius: 3px;
    background: #555;
    color: #fff;
  }
  .st-ongoing { background-color: #5bc0de; }
  .st-completed { background-color: #5cb85c; }

  /* Tombol Aksi */
  .action-links {
    display: flex;
    gap: 10px;
  }
  .btn-edit-sm {
    color: #5bc0de;
    font-size: 0.85em;
    text-decoration: none;
    font-weight: bold;
  }
  .btn-edit-sm:hover { text-decoration: underline; }

  .btn-delete-sm {
    background: none;
    border: none;
    color: #d9534f;
    font-size: 0.85em;
    cursor: pointer;
    padding: 0;
    font-weight: bold;
  }
  .btn-delete-sm:hover { text-decoration: underline; color: #ff6b6b; }


  /* --- Search Form (Tetap) --- */
  .admin-search-form {
    margin-bottom: 20px;
    display: flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
  }
  .admin-search-form input[type="text"] {
    flex-grow: 1;
    max-width: 400px;
    padding: 8px;
    background-color: #444;
    border: 1px solid #666;
    color: #eee;
    border-radius: 4px;
    font-size: 0.9em;
  }
  .admin-search-form button {
    padding: 8px 15px;
    background-color: #5bc0de;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9em;
  }
  .admin-search-form a { color: #aaa; font-size: 0.9em; text-decoration: none; }
  .admin-search-form a:hover { text-decoration: underline; }
  
  .pagination { margin-top: 20px; }
</style>

<form class="admin-search-form" action="/admin/anime" method="GET">
  <input type="text" name="search" placeholder="Cari berdasarkan Judul atau Slug..." value="<%= (typeof searchQuery !== 'undefined' && searchQuery) ? searchQuery : '' %>">
  <button type="submit">Cari</button>
  <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
    <a href="/admin/anime">Clear</a>
  <% } %>
</form>

<div class="anime-container">
    <% if (animes.length === 0) { %>
      <div style="text-align: center; padding: 40px; background: #333; border-radius: 8px; color: #ccc;">
        <p>Tidak ada anime yang cocok ditemukan.</p>
      </div>
    <% } else { %>
      
      <div class="anime-grid-list">
        <% animes.forEach(anime => { %>
            
          <div class="list-card">
            <div class="list-thumb">
                <img src="<%= anime.imageUrl || '/images/default.jpg' %>" alt="Poster" loading="lazy">
            </div>

            <div class="list-info">
                <div>
                    <h3 class="list-title" title="<%= anime.title %>"><%= anime.title %></h3>
                    
                    <% 
                   let statusClass = '';
                   let statusText = anime.info?.Status || 'N/A';
                   if(statusText.toLowerCase().includes('ongoing')) statusClass = 'st-ongoing';
                   if(statusText.toLowerCase().includes('completed')) statusClass = 'st-completed';
                %>
                    <div style="margin-bottom: 5px;">
                        <span class="status-badge <%= statusClass %>"><%= statusText %></span>
                    </div>

                    <div class="list-meta">Slug: <%= anime.pageSlug %></div>
                    <div class="list-meta">Upd: <%= new Date(anime.updatedAt).toLocaleDateString('id-ID') %></div>
                </div>

                <div class="list-actions">
                    <div class="action-links">
                        <a href="/admin/anime/<%= encodeURIComponent(anime.pageSlug) %>/edit" class="btn-edit-sm">Edit</a>
                        <form action="/admin/anime/<%= encodeURIComponent(anime.pageSlug) %>/delete" method="POST" style="display:inline; margin:0;" onsubmit="return confirm('Yakin hapus?');">
                            <button type="submit" class="btn-delete-sm">Hapus</button>
                        </form>
                    </div>
                </div>
            </div>
          </div>

        <% }) %>
      </div>

    <% } %>
</div>

<% if (totalPages > 1) { %>
  <div class="pagination">
    <% const pageSeparator = baseUrl.includes('?') ? '&' : '?'; %>
    <% if (currentPage > 1) { %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= currentPage - 1 %>">« Prev</a> <% } else { %> <span class="disabled">« Prev</span> <% } %>
    <% const maxP = 5; let sP = Math.max(1, currentPage - Math.floor(maxP / 2)); let eP = Math.min(totalPages, sP + maxP - 1); if(eP-sP+1<maxP) sP=Math.max(1,eP-maxP+1); %>
    <% if (sP > 1) { %> <a href="<%= baseUrl %><%= pageSeparator %>page=1">1</a> <% if (sP > 2) { %> <span class="disabled">...</span> <% } %> <% } %>
    <% for (let i = sP; i <= eP; i++) { %> <% if (i === currentPage) { %> <span class="current"><%= i %></span> <% } else { %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= i %>"><%= i %></a> <% } %> <% } %>
    <% if (eP < totalPages) { %> <% if (eP < totalPages - 1) { %> <span class="disabled">...</span> <% } %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= totalPages %>"><%= totalPages %></a> <% } %>
    <% if (currentPage < totalPages) { %> <a href="<%= baseUrl %><%= pageSeparator %>page=<%= currentPage + 1 %>">Next »</a> <% } else { %> <span class="disabled">Next »</span> <% } %>
  </div>
<% } %>

<%- include('../admin/partials/footer', { page: page }) %>
