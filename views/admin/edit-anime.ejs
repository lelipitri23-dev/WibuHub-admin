<%- include('partials/header') %>
    <a href="/admin" class="admin-back-btn">Â« Kembali ke Dasbor</a>
    <h1>Edit Anime: <%= anime.title %></h1>

    <style>
        .admin-back-btn {
            display: inline-block;
            margin-bottom: 20px;
            padding: 6px 12px;
            background-color: #555;
            color: #fff !important;
            border-radius: 4px;
            font-size: 0.9em;
            font-weight: bold;
            text-decoration: none;
        }

        .admin-form label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .admin-form input[type="text"],
        .admin-form textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            background-color: #444;
            border: 1px solid #666;
            color: #eee;
            border-radius: 4px;
        }

        .admin-form textarea {
            min-height: 150px;
        }

        .admin-form button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>


<div class="admin-form jikan-generator">
    <h2>Generate dari MyAnimeList</h2>
    <label for="mal_id">MyAnimeList ID:</label>
    <input type="text" id="mal_id" placeholder="Contoh: 5114" style="width: 200px; display: inline-block;">
    <button type="button" id="jikan-generate-btn" style="background-color: #5bc0de;">Generate Data</button>
    <div id="jikan-status" style="margin-top: 10px; font-weight: bold;"></div>
</div>
    <form class="admin-form" action="/admin/anime/<%= anime.pageSlug %>/edit" method="POST" enctype="multipart/form-data">
        <h2>Detail Anime</h2>
        <div><label>Judul:</label><input type="text" name="title" id="title" value="<%= anime.title %>"></div>
        <div><label>Slug (ReadOnly):</label><input type="text" id="pageSlug" value="<%= anime.pageSlug %>" readonly style="background:#333; color:#999;"></div>
    
        <div style="background: #333; padding: 15px; border-radius: 4px; margin-bottom: 15px; border: 1px dashed #666;">
            <label>Poster Saat Ini:</label>
            <img src="<%= anime.imageUrl %>" style="max-height: 150px; display: block; margin-bottom: 15px; border-radius: 4px; border: 2px solid #555;">
            
            <label style="color: #87CEEB;">Ganti Poster (Upload R2):</label>
            <input type="file" name="imageUpload" accept="image/*" style="margin-bottom: 15px; background: transparent; border: none; padding: 0;">
            
            <label>Atau Edit URL Manual:</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= anime.imageUrl %>" style="margin-bottom:0;">
        </div>

        <div><label>Sinopsis:</label><textarea name="synopsis" id="synopsis"><%= anime.synopsis %></textarea></div>

        <h3>Info Detail</h3>
        <div><label>Alternatif:</label><input type="text" name="info.Alternatif" id="info.Alternatif" value="<%= anime.info ? anime.info.Alternatif : '' %>"></div>
        <div><label>Type:</label><input type="text" name="info.Type" id="info.Type" value="<%= anime.info ? anime.info.Type : '' %>"></div>
        <div><label>Status:</label><input type="text" name="info.Status" id="info.Status" value="<%= anime.info ? anime.info.Status : '' %>"></div>
        <div><label>Released:</label><input type="text" name="info.Released" id="info.Released" value="<%= anime.info ? anime.info.Released : '' %>"></div>
        <div><label>Produser:</label><input type="text" name="info.Produser" id="info.Produser" value="<%= anime.info ? anime.info.Produser : '' %>"></div>
        <div><label>Rating:</label><input type="text" name="info.Rating" id="info.Rating" value="<%= anime.info ? anime.info.Rating : '' %>"></div>
        <div><label>Studio:</label><input type="text" name="info.Studio" id="info.Studio" value="<%= anime.info ? anime.info.Studio : '' %>"></div>

        <h3>Genre</h3>
        <div><label>Genre:</label><input type="text" name="genres" id="genres" value="<%= anime.genres ? anime.genres.join(', ') : '' %>"></div>

        <button type="submit">Update Anime</button>
    </form>

    <hr style="border-color: #555; margin: 40px 0;">

    <h2>Tambah Episode Baru</h2>
    <form class="admin-form" action="/admin/anime/<%= anime.pageSlug %>/episodes/add" method="POST">
        <div>
            <label>Judul Episode:</label>
            <input type="text" id="episodeTitle" name="episodeTitle" required onkeyup="updateEpisodeSlug()">
        </div>
        <div>
            <label>Slug Episode (Akhiran):</label>
            <input type="text" id="episodeSlug" name="episodeSlug" placeholder="Contoh: 1" required>
            <small style="color:#aaa; display:block; margin-top:5px;">
                Server akan membuat full slug: <span style="color: #87CEEB;">/<%= anime.pageSlug %>/<span id="slugPreview">...</span></span>
            </small>
        </div>
    
        <button type="submit" style="background-color: #5bc0de;">Tambah Episode</button>
    </form>

    <hr style="border-color: #555; margin: 40px 0;">

    <h2>Daftar Episode</h2>
    <ul style="list-style: none; padding: 0; background: #222; padding: 10px; border-radius: 5px;">
        <% if (anime.episodes && anime.episodes.length > 0) { %>
            <% anime.episodes.forEach(ep => { %>
                <li style="display: flex; justify-content: space-between; padding: 8px; border-bottom: 1px solid #444;">
                    <span>
                        <strong><%= ep.title %></strong> <br>
                        <small style="color:#aaa;"><%= ep.episodeSlug %></small>
                    </span>
                    <span>
                        <a href="/admin/episode<%= ep.episodeSlug %>/edit" style="color: #87CEEB; margin-right: 10px;">Edit</a>
                        
                        <form action="/admin/episode<%= ep.episodeSlug %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Hapus?');">
                            <button type="submit" style="background:#d9534f; color:white; border:none; padding:4px 8px; border-radius:4px; cursor:pointer;">Delete</button>
                        </form>
                    </span>
                </li>
            <% }) %>
        <% } else { %>
            <li style="padding:10px;">Belum ada episode.</li>
        <% } %>
    </ul>

<script>
    function updateEpisodeSlug() {
        const titleInput = document.getElementById('episodeTitle');
        const slugInput = document.getElementById('episodeSlug');
        const slugPreview = document.getElementById('slugPreview');
        
        let text = titleInput.value;
        let generatedSlug = '';

        const episodeMatch = text.match(/Episode\s+(\d+)/i);
        if (episodeMatch) {
            generatedSlug = episodeMatch[1];
        } else {
            generatedSlug = text.toString().toLowerCase().trim()
                .replace(/\s+/g, '-')           
                .replace(/[^\w\-]+/g, '')       
                .replace(/\-\-+/g, '-');
        }

        slugInput.value = generatedSlug;
        slugPreview.textContent = generatedSlug;
    }

    function slugify(text) {
        return text.toString().toLowerCase().trim()
            .replace(/\s+/g, '-')           
            .replace(/[^\w\-]+/g, '')       
            .replace(/\-\-+/g, '-');
    }

    document.getElementById('jikan-generate-btn').addEventListener('click', async () => {
        const malId = document.getElementById('mal_id').value;
        const statusDiv = document.getElementById('jikan-status');
        
        if(!malId) return;
        
        statusDiv.textContent = 'Loading...';
        statusDiv.style.color = 'cyan';

        try {
            const res = await fetch(`https://api.jikan.moe/v4/anime/${malId}`);
            const json = await res.json();
            const data = json.data;

            document.getElementById('title').value = data.title;
            document.getElementById('info.Alternatif').value = data.title_japanese;
            document.getElementById('info.Type').value = data.type;
            document.getElementById('info.Status').value = (data.status === 'Currently Airing') ? 'Ongoing' : 'Completed';
            
            let releaseYear = data.year;
            if (!releaseYear && data.aired && data.aired.prop && data.aired.prop.from) {
                releaseYear = data.aired.prop.from.year;
            }
            document.getElementById('info.Released').value = releaseYear || '';

            document.getElementById('info.Rating').value = data.score || '0';
            document.getElementById('info.Studio').value = data.studios.map(s => s.name).join(', ');
            
            const producers = data.producers.map(p => p.name).join(', ');
            document.getElementById('info.Produser').value = producers;

            // BAGIAN GENRE DI-NONAKTIFKAN AGAR TIDAK TER-UPDATE OTOMATIS 
            // const genres = data.genres.map(g => g.name).join(', ');
            // document.getElementById('genres').value = genres;

            statusDiv.textContent = 'Sukses!';
            statusDiv.style.color = '#5cb85c';
        } catch (e) {
            statusDiv.textContent = 'Error: ' + e.message;
            statusDiv.style.color = 'red';
        }
    });
</script>

